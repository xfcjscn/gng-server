<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />

    <bean class="net.gplatform.server.infra.spring.SpringContextsUtil" lazy-init="false"/>

	<beans profile="dev">
		<context:property-placeholder location="classpath:spring/env.dev.properties" />
		<import resource="classpath:spring/security-config.xml" />
		<import resource="classpath:spring/data-config.xml" />
		<import resource="classpath:spring/security-config-gng.xml" />
	</beans>
	<beans profile="production">
		<context:property-placeholder location="classpath:spring/env.production.properties" />
		<import resource="classpath:spring/security-config.xml" />
		<import resource="classpath:spring/data-config.xml" />
		<import resource="classpath:spring/security-config-gng.xml" />
	</beans>

</beans>