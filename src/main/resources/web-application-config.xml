<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />

	<beans profile="dev">
		<context:property-placeholder location="classpath:env.dev.properties" />
		<import resource="classpath:security-config.xml" />
		<import resource="classpath:data-config.xml" />
		<import resource="classpath:security-config-gng.xml" />
	</beans>
	<beans profile="production">
		<context:property-placeholder location="classpath:env.production.properties" />
		<import resource="classpath:security-config.xml" />
		<import resource="classpath:data-config.xml" />
		<import resource="classpath:security-config-gng.xml" />
	</beans>

</beans>